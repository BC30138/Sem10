{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "0.1.0",
    "runner": "terminal",
    "tasks": [
        {
            "taskName": "Build",
            "command": "gcc",
            "isBuildCommand": true,
            "isShellCommand": true,
            "args": [
                "-o0",
                "src/*.c",
                "src/*.h",
                "-o",
                "daemon.out"
            ],
            "showOutput": "always",
            "problemMatcher": {
                "owner": "cpp",
                "fileLocation": [
                    "relative",
                    "${workspaceRoot}"
                ],
                "pattern": {
                    "regexp": "^(.*):(\\d+):(\\d+):\\s+(warning|error):\\s+(.*)$",
                    "file": 1,
                    "line": 2,
                    "column": 3,
                    "severity": 4,
                    "message": 5
                }
            }
        },
        {
            "taskName": "Run",
            "command": "./daemon.out",
            "isShellCommand": true
        }
    ]
}